#!/usr/bin/env ruby

STDERR.sync = STDOUT.sync = true

require File.expand_path('../../lib/clockwork', __FILE__)
include Clockwork

usage = "clockwork <clockwork.rb>"
file = ARGV.shift or abort usage

file = "./#{file}" unless file.match(/^[\/.]/)

require file

trap('INT') do
	puts "\rExiting"
	exit
end

run
